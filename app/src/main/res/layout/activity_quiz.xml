<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizActivity"
    android:background="@color/background"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/txt_quiz_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_quiz_activity"
        android:textColor="@color/color_btn_text"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/txt_quiz_activity"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_above="@+id/stop_test_Quiz"
        />
    <TextView
        android:id="@+id/stop_test_Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/stop_test"
        android:textColor="@color/color_btn_text"
        android:textSize="20dp" />

</RelativeLayout>